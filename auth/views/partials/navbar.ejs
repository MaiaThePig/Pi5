<script>
    document.getElementById("logoutBtn").addEventListener("click", (event) => {
        event.preventDefault(); // Evita o comportamento padrão de navegação

        fetch("/api/user/logout", {
            method: "POST",
            credentials: "include" // Se estiver usando cookies para autenticação
        }).then(response => {
            if (response.ok) {
                window.location.href = "/"; // Redireciona para a página inicial após logout
            } else {
                alert("Nenhuma conta conectada");
            }
        });
    });
</script>
